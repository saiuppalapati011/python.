def prime (n):
    bool=0
    bool2=0
    if (n%2==0):
        bool2=1
    if (n==2):
        print (f"{n} is a prime number and even number")
    else : 
        for i in range (3,n) :
            if(n%i==0):
                bool = 1
    return bool
num=int(input("Enter a number : "))
condition=prime(num)
if (condition ==1):
    print (f"{num} is not a prime number")
else : 
    print (f"{num} is a prime number")
